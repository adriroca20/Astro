<header
    class="flex justify-center items-center h-[70px] p-3 w-full xl:w-[810px] 
    sticky top-0 left-0 z-[99999] bg-[#1818224d] text-[#c7cfdb] 
    rounded-b-xl border-b border-[#ffffff60] 
    transition-all duration-300"
>
    <nav
        class="flex w-full justify-between align-items-center gap-11 opacity-80 text-xl"
    >
        <a href="#top">Home</a>
        <a href="#experience">Experience</a>
        <a href="#mainProjects">Main projects</a>
        <a href="#smallProjects">Small projects</a>
        <a href="#about-me">About</a>
        <a href="#contact">Contact</a>
    </nav>
</header>

<script>
    const header = document.querySelector("header");
    window.addEventListener("scroll", () => {
        if (
            document.documentElement.scrollTop ||
            document.body.scrollTop > window.innerHeight
        ) {
            header?.classList.add("bg-[#181822f1]");
        } else {
            header?.classList.remove("bg-[#181822f1]");
        }
    });
</script>
