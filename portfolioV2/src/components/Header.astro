<header
  class="flex justify-center items-center h-[70px] p-3 w-full md:w-[800px] xl:w-[810px]
    sticky top-0 left-0 z-[99999] bg-[#1818224d] text-[#e5ebf3]
    rounded-b-xl border-b border-[#ffffff60]
    transition-all duration-300"
>
  <nav
    class="hidden md:flex sm:w-full sm:justify-between sm:align-items-center sm:gap-11 sm:opacity-80 sm:text-xl"
  >
    <a href="#home" aria-label="home">Home</a>
    <a href="#experience" aria-label="experience">Experience</a>
    <a href="#mainProjects" aria-label="mainProjects">Main projects</a>
    <a href="#smallProjects" aria-label="smallProjects">Small projects</a>
    <a href="#about-me" aria-label="about-me">About</a>
    <a href="#contact" aria-label="contact">Contact</a>
  </nav>
  <nav class="flex justify-between items-center w-full flex-wrap md:hidden">
    <a href="#home" aria-label="home">Home</a>
    <button id="open-button">Hamburguer</button>
    <div
      id="items-sm-navbar"
      class="fixed top-0 left-0 h-0 w-0 overflow-hidden flex justify-center items-center flex-col bg-[#14141cf5] gap-5 text-2xl duration-500"
    >
      <button id="close-button" class="absolute top-5 right-5">Close</button>
      <a href="#home" aria-label="home">Home</a>
      <a href="#experience" aria-label="experience">Experience</a>
      <a href="#mainProjects" aria-label="mainProjects">Main projects</a>
      <a href="#smallProjects" aria-label="smallProjects">Small projects</a>
      <a href="#about-me" aria-label="about-me">About</a>
      <a href="#contact" aria-label="contact">Contact</a>
    </div>
  </nav>
</header>

<script>
  const openButton = document.querySelector("#open-button");
  const closeButton = document.querySelector("#close-button");
  const itemsContainer = document.querySelector("#items-sm-navbar");
  const links = document.querySelectorAll("#items-sm-navbar a")
  closeButton?.addEventListener("click", () => {
    itemsContainer?.classList.remove("h-screen");
    itemsContainer?.classList.remove("w-full");
    itemsContainer?.classList.add("w-0");
    itemsContainer?.classList.add("h-0");
  });
  openButton?.addEventListener("click", () => {
    itemsContainer?.classList.remove("h-0");
    itemsContainer?.classList.add("h-screen");
    itemsContainer?.classList.add("w-full");
  });
  links.forEach((link)=>{
    link.addEventListener("click", ()=>{
      itemsContainer?.classList.remove("h-screen");
      itemsContainer?.classList.add("h-0");
    })
  })
</script>
<style>
  header {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadown {
    to {
      @apply shadow-lg ring-1 backdrop-blur bg-[#181822f1] ring-white/10;
    }
  }
</style>
